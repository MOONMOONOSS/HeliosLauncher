<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>MOON2 Launcher</title>
    <% if (htmlWebpackPlugin.options.nodeModules) { %>
      <!-- Add `node_modules/` to global paths so `require` works properly in development -->
      <script>
        require('module').globalPaths.push('<%= htmlWebpackPlugin.options.nodeModules.replace(/\\/g, '\\\\') %>')
      </script>
    <% } %>
    <script src="static/js/electron/setup.js"></script>
    <link type="text/css" rel="stylesheet" href="static/css/overlays/loader.css">
    <link type="text/css" rel="stylesheet" href="static/css/main_window.css">
  </head>
  <body>
    <div id="app"></div>

    <div id="loadingContainer">
      <div id="loadingContent">
        <img id="loadCenterImage" src="static/img/loading_seal.png">
      </div>
    </div>

    <!-- Set `__static` path to static files in production -->
    <script>
      if (process.env.NODE_ENV !== 'development') window.__static = require('path').join(__dirname, '/static').replace(/\\/g, '\\\\')
    </script>

    <!-- webpack builds are automatically injected -->
  </body>
</html>
